---
const { size, align, bg_transparent } = Astro.props
---

<!-- ========================
///// Begin page header /////
=============================
* Use classes "ph-xs", "ph-sm", "ph-lg" or "ph-xlg" to set page header size.
* Use class "ph-center" or "ph-right" to align page header caption.
-->
<section id="page-header" class:list={[`ph-${size}`, `ph-${align}`, {"bg-transparent": bg_transparent}]}>
    <slot />
</section>
<!-- End page header -->
